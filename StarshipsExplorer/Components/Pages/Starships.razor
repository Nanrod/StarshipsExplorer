@page "/starships"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using StarshipsExplorer.App.Starships
@inject StarshipsService StarshipsSvc

<PageTitle>Starships</PageTitle>

<h1>Starships</h1>

@if (!string.IsNullOrWhiteSpace(Error))
{
    <div class="alert alert-danger" role="alert">@Error</div>
}
else if (IsLoading)
{
    <div class="d-flex align-items-center gap-2 mb-3">
        <div class="spinner-border" role="status" aria-label="Loading"></div>
        <div>
            <div><strong>Loading starshipsâ€¦</strong></div>
            @if (!string.IsNullOrWhiteSpace(CurrentLoadingName))
            {
                <div class="text-muted small">Latest: @CurrentLoadingName</div>
            }
        </div>
    </div>

    @if (TotalStarships > 0)
    {
        <div class="progress" style="height: 22px;">
            <div class="progress-bar" role="progressbar"
                 style="width: @ProgressPercent"
                 aria-valuenow="@LoadedStarships" aria-valuemin="0" aria-valuemax="@TotalStarships">
                @LoadedStarships / @TotalStarships
            </div>
        </div>
    }
}
else
{
    <div class="mb-3">
        <label class="form-label" for="manufacturer">Manufacturer</label>
        <select class="form-select" id="manufacturer" @bind="SelectedManufacturer">
            <option value="">(All manufacturers)</option>
            @foreach (var m in Manufacturers)
            {
                <option value="@m">@m</option>
            }
        </select>
    </div>

    <p class="text-muted">
        Showing <strong>@FilteredStarships.Count</strong> of <strong>@AllStarships.Count</strong>.
    </p>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Model</th>
                <th>Manufacturer</th>
                <th>Class</th>
                <th>Crew</th>
                <th>Passengers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in FilteredStarships)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Model</td>
                    <td>@s.Manufacturer</td>
                    <td>@s.StarshipClass</td>
                    <td>@s.Crew</td>
                    <td>@s.Passengers</td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private bool IsLoading { get; set; } = true;
    private string? Error { get; set; }
    private int LoadedStarships { get; set; }
    private int TotalStarships { get; set; }
    private string? CurrentLoadingName { get; set; }

    private string? SelectedManufacturer { get; set; } = string.Empty;

    private List<StarshipDto> AllStarships { get; set; } = new();
    private List<string> Manufacturers { get; set; } = new();

    private List<StarshipDto> FilteredStarships =>
        string.IsNullOrWhiteSpace(SelectedManufacturer)
            ? AllStarships
            : AllStarships
                .Where(s => s.Manufacturers.Any(m => string.Equals(m, SelectedManufacturer, StringComparison.OrdinalIgnoreCase)))
                .ToList();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var progress = new Progress<StarshipsLoadProgress>(p =>
            {
                // This can be called from background continuations; marshal UI updates safely.
                _ = InvokeAsync(() =>
                {
                    LoadedStarships = p.Loaded;
                    TotalStarships = p.Total;
                    CurrentLoadingName = p.CurrentItemName;
                    StateHasChanged();
                });
            });

            AllStarships = (await StarshipsSvc.GetStarshipsAsync(manufacturer: null, progress, CancellationToken.None)).ToList();

            Manufacturers = AllStarships
                .SelectMany(s => s.Manufacturers)
                .Distinct(StringComparer.OrdinalIgnoreCase)
                .OrderBy(x => x, StringComparer.OrdinalIgnoreCase)
                .ToList();

            // Manufacturers = (await StarshipsSvc.GetManufacturersAsync(CancellationToken.None)).ToList();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private string ProgressPercent =>
        TotalStarships <= 0 ? "0%" : $"{Math.Min(100, (int)Math.Round(LoadedStarships * 100d / TotalStarships))}%";
}

